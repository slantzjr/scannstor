<div class="container">
  <h3>Users</h3>
  <table class='table'>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>


    <% _.each(users, function(user) { %>
    <tr data-id="<%= user.id %>" data-model="User">
    	<td><%= user.id %></td>
    	<td><%= user.name %></td>
    	<td><%= user.email %></td>
      <% if (user.admin) { %>
        <td><img src="/images/checkmark.png"></td>
      <% } else { %>
        <td><img src="/images/xout.png"></td>
      <% } %>
    	<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
    	<td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>

    	<td><form action="/user/destroy/<%= user.id %>" method="POST">
    		<input type="hidden" name="_method" value="delete"/>
    		<input type="hidden" name="_csrf" value="<%= _csrf %>" />
    		<input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
    	</form></td>

    </tr>

    <% }) %>
  </table>
</div>